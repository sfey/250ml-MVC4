<!DOCTYPE html>
<html lang="de">
<head>
    <title>partyrating.de - 250ml edition</title>
    <meta charset="UTF-8">
  
    @Styles.Render("~/Content/bootstrap/css")
</head>

<body>

    <div id="wrap">
        <div id="push_top"></div>

    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2">
                @Html.ActionLink("All Events", "Index", "Happening", null, new { id = "all_events", @class = "panel panel-default box" })
                @Html.ActionLink("Your Events", "Own", "Happening", null, new { id = "your_events", @class = "panel panel-default box" })
            </div>

            <!-- Content -->
            <div class="col-md-10">

                <div class="panel panel-default">
                    <div class="panel-heading">
                     @Html.Partial("UserProfilePartial")
                    </div>

                   <div class="panel-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <div id="push"></div>
    </div> <!-- container -->
</div> <!-- wrap -->
    
  <div id="footer">
    <div class="container">
      <p class="well well-small">
        <strong>partyrating.de</strong> - 250ml edition
    
      <!-- wird ggf bei Live-Betrieb implementiert
      <class="pull-right">
        <a href="#">faq</a>&nbsp;|
        <a href="#">about</a>&nbsp;|
        <strong><a href="#">contact</a></strong>-->
      </div>
  </div>

    @Scripts.Render("~/bundles/bootstrap/js")
    @RenderSection("scripts", required: false)

</body>

</html>