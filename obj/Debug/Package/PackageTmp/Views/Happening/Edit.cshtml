@model _250ml_MVC4_2.Models.Happening

<h2>Veranstaltung bearbeiten</h2>

@using (Html.BeginForm("Edit","Happening",FormMethod.Post,new{ @class="col-md-12"})) {
    
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.HappeningId)

    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-6">
            @Html.LabelFor(model => model.StartDate,"Beginn",null)
            <input type="text" id="StartDate" name="StartDate" class="form-control" value="@Model.StartDate.ToString("dd/MM/yy HH:mm")" />
            @Html.ValidationMessageFor(m => m.StartDate)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.EndDate,"Ende",null)
            <input type="text" id="EndDate" name="EndDate" class="form-control" value="@Model.EndDate.ToString("dd/MM/yy HH:mm")" />
            @Html.ValidationMessageFor(m => m.EndDate)
        </div>
    </div>
    
    @Html.HiddenFor(m => m.UserId)

    <div class="form-group">
        <div class="col-md-6">
            <button class="btn btn-success" type="submit" value="speichern" style="margin-top:20px;">Speichern</button>
            @Html.ActionLink("zurück", "Index", null, new { @class = "btn btn-info", style = "margin-top:20px;" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/timepicker")
}
